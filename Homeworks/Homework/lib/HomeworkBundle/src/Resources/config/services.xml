<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true"/>

        <!--Cервис Фабрики юнитов-->
        <service id="symfony_skillbox_homework.unit_factory" class="SymfonySkillbox\HomeworkBundle\UnitFactory" public="true">
<!--            <argument key="$strategy" type="service" id="symfony_skillbox_homework.unit_factory" />-->
<!--                        <argument key="$enableSolder" type="service" id="symfony_skillbox.produce_unit_command" />-->
<!--                        <argument key="$enableArcher" type="service" id="symfony_skillbox.produce_unit_command" />-->
        </service>
        <service id="SymfonySkillbox\HomeworkBundle\UnitFactory" alias="symfony_skillbox_homework.unit_factory" public="false"/>
        <!---->

        <!--Cервис Фабрики юнитов-->
        <service id="symfony_skillbox_homework.strategy" class="SymfonySkillbox\HomeworkBundle\StrategyInterface" public="true"/>
        <service id="SymfonySkillbox\HomeworkBundle\StrategyInterface" alias="symfony_skillbox_homework.strategy" public="false"/>
        <!---->

        <!--Cтратегия производства юнитов по силе-->
        <service id="symfony_skillbox_homework.strategy_strength" class="SymfonySkillbox\HomeworkBundle\StrengthStrategy" public="true"/>
        <service id="SymfonySkillbox\HomeworkBundle\StrengthStrategy" alias="symfony_skillbox_homework.strategy_strength" public="false"/>
        <!---->

        <!--Cтратегия производства юнитов по объему здоровья-->
        <service id="symfony_skillbox_homework.strategy_health" class="SymfonySkillbox\HomeworkBundle\HealthStrategy" public="true"/>
        <service id="SymfonySkillbox\HomeworkBundle\HealthStrategy" alias="symfony_skillbox_homework.strategy_health" public="false"/>
        <!---->

        <!--Консольная комманда Фабрики юнитов-->
        <service id="symfony_skillbox.produce_unit_command" class="SymfonySkillbox\HomeworkBundle\Command\HomeworkBundleProduceUnitsCommand" lazy="true" public="true">
            <tag name="console.command" command="homework-bundle:produce-units"/>
        </service>
        <!---->


    </services>
</container>